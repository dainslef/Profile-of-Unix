// Config for Visual Studio Code
{
	"editor.fontFamily": "Monaco, Source Code Pro, Consolas",
	"editor.rulers": [100],
	"editor.fontSize": 12, // Use Moncaco font in Linux should set 13
	"editor.tabSize": 4,
	"editor.wordWrap": "on",
	"editor.wrappingIndent": "same",
	"editor.quickSuggestionsDelay": 5,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.folding": false,
	"editor.glyphMargin": true,
	"editor.formatOnType": true,
	"editor.renderWhitespace": "all",
	"editor.renderControlCharacters": true,
	"editor.renderIndentGuides": true,
	"editor.cursorStyle": "block",
	"editor.cursorBlinking": "expand",
	"editor.renderLineHighlight": "all",
	"editor.stablePeek": true,
	"editor.minimap.enabled": true,
	"editor.minimap.maxColumn": 100,
	"editor.hideCursorInOverviewRuler": true,
	"editor.overviewRulerBorder": true,

	"diffEditor.ignoreTrimWhitespace": false,
	"emmet.showExpandedAbbreviation": "never",

	"files.eol": "\n",
	"files.encoding": "utf8",
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,

	// UI
	"window.openFilesInNewWindow": "on",
	"window.openFoldersInNewWindow": "on",
	"window.newWindowDimensions": "default",
	"window.menuBarVisibility": "toggle",
	"workbench.sideBar.location": "right",
	"workbench.editor.openPositioning": "last",
	"workbench.iconTheme": "vs-minimal",
	"workbench.colorTheme": "One Dark Pro",
	"explorer.enableDragAndDrop": true,

	// Update
	"update.channel": "none",

	// Extensions
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"extensions.showRecommendationsOnlyOnDemand": true,

	// Data report
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,

	// Terminal
	"terminal.integrated.fontSize": 12, // Use Moncaco font in Linux should set 13
	"terminal.integrated.shell.windows": "cmd.exe",
	"terminal.integrated.shell.osx": "fish",
	"terminal.integrated.shell.linux": "fish",

	// Markdown Configuration
	"markdown.previewFrontMatter": "show",
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"markdown.extension.toc.githubCompatibility": true,
	"markdown.extension.orderedList.marker": "one",

	// Power Mode Configuration
	"powermode.enabled": true,
	"powermode.enableShake": false,
	"powermode.enableStatusBarComboTimer": false,
	"powermode.enableStatusBarComboCounter": false,
	"powermode.presets": "flames",

	// C/C++ Configuration
	"C_Cpp.formatting": "Disabled",
	"C_Cpp.clang_format_sortIncludes": true,
	"C_Cpp.intelliSenseEngine": "Default",

	// Golang Configuration
	"go.formatTool": "gofmt",

	// Rust Configuration
	"rust-client.channel": "stable",

	// Language specific editor settings
	"[scala]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[ruby]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[haskell]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[rust]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[markdown]": {
		"editor.quickSuggestions": false
	}
}
